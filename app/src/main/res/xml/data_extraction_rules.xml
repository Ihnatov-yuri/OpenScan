<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Allow preferences backup -->
        <include domain="sharedpref" path="." />
        <!-- Include app data -->
        <include domain="file" path="." />
    </cloud-backup>
    <device-transfer>
        <!-- Allow preferences transfer -->
        <include domain="sharedpref" path="." />
        <!-- Include app data transfer -->
        <include domain="file" path="." />
    </device-transfer>
</data-extraction-rules> 